<div class="hero text-center">
  <div class="container">
    <h1 class="display-4">Bienvenido a Lincar</h1>
    <p class="lead">Descubre las últimas tendencias de moda para todos en tu familia.</p>
  </div>
</div>

<div class="container my-5">
  <!-- Sección de Categorías -->
  <h2 class="text-center mb-4">Compra por Categoría</h2>
  <div class="row g-4">
    <div class="col-md-3">
      <div class="category-card">
        <img src="https://images.unsplash.com/photo-1490578474895-699cd4e2cf59?auto=format&fit=crop&w=600&h=400" alt="Moda para Hombres">
        <div class="category-overlay">
          <h3>Hombres</h3>
          <a href="/category/man" class="btn btn-light">Comprar Ahora</a>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="category-card">
        <img src="https://images.unsplash.com/photo-1483985988355-763728e1935b?auto=format&fit=crop&w=600&h=400" alt="Moda para Mujeres">
        <div class="category-overlay">
          <h3>Mujeres</h3>
          <a href="/category/woman" class="btn btn-light">Comprar Ahora</a>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="category-card">
        <img src="https://images.unsplash.com/photo-1503919545889-aef636e10ad4?auto=format&fit=crop&w=600&h=400" alt="Moda para Niños">
        <div class="category-overlay">
          <h3>Niños</h3>
          <a href="/category/boy" class="btn btn-light">Comprar Ahora</a>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="category-card">
        <img src="https://images.unsplash.com/photo-1476234251651-f353703a034d?auto=format&fit=crop&w=600&h=400" alt="Moda para Niñas">
        <div class="category-overlay">
          <h3>Niñas</h3>
          <a href="/category/girl" class="btn btn-light">Comprar Ahora</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Sección de Más Vendidos -->
  <section class="my-5">
    <h2 class="text-center mb-4">Más Vendidos</h2>
    <div class="row g-4">
      <% products.slice(0, 4).forEach(product => { %>
        <div class="col-md-3">
          <div class="card product-card">
            <div class="d-flex justify-content-center align-items-center" style="height: 200px; overflow: hidden;">
              <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="max-height: 100%; max-width: 100%; object-fit: contain;">
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">$<%= product.price %></p>
              <a href="/product/<%= product.id %>" class="btn btn-primary">Ver Detalles</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>
</div>
